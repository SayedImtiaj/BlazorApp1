@page "/trainees/edit/{id:int}"
@if (Trainee != null)
{
    <div class="row">
        <div class="col-lg-9">
            <h1>Edit</h1>
        </div>
        <div class="col-lg-3 text-right">
            <a class="btn btn-secondary btn-sm" href="/trainees" role="button">
                Go Back To
                List
            </a>
        </div>
    </div>
    <EditForm Model="@Trainee" OnValidSubmit="@SubmitTrainee">
        <div class="form-group">
            <label>Name</label>
            <InputText class="form-control" @bind-Value="Trainee.Name" />
        </div>
        <div class="form-group">
            <label>Email Address</label>
            <InputText class="form-control" @bind-Value="Trainee.EmailAddress" />
        </div>
        <div class="form-group">
            <label>Cellphone No.</label>
            <InputText class="form-control" @bind-Value="Trainee.CellphoneNo" />
        </div>
        <div class="form-group">
            <label>Contact Address</label>
            <InputText class="form-control" @bind-Value="Trainee.ContactAddress" />
        </div>
        <div class="form-group">
            <label>Course</label>
            <InputSelect @bind-Value="Trainee.CourseId" class="form-control">
                @if (Courses != null)
                {
                    @foreach (var course in Courses)
                    {
                        <option value="@course.Id">@course.Name</option>
                    }
                }
            </InputSelect>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </EditForm>
}
